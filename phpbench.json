{
    "bootstrap": "vendor/autoload.php",
    "path": "benchmarks",
    "retry_threshold": 5,
    "extensions": [
        "PhpBench\\Extensions\\XDebug\\XDebugExtension"
    ],
    "progress": "dots",
    "xml_storage_path": "build/bench",
    "reports": {
        "table": {
            "generator": "table",
            "cols": [
                "benchmark",
                "subject",
                "mem_peak",
                "mean",
                "best",
                "diff"
            ],
            "sort": {
                "benchmark": "asc",
                "mean": "desc"
            }
        },
        "container": {
            "title": "Time",
            "generator": "table",
            "compare": "subject",
            "compare_fields": [ "mode" ],
            "break": ["revs", "its"],
            "cols": ["benchmark"]
        },
        "memory": {
            "title": "Memory",
            "generator": "table",
            "compare": "subject",
            "compare_fields": [ "mem_peak" ],
            "break": ["revs", "its"],
            "cols": ["benchmark"]
        },
        "environment": {
            "title": "Environment",
            "extends": "env"
        },
        "detail": {
            "title": "Detail by subject",
            "description": "Sorted by mode",
            "extends": "aggregate",
            "break": [ "subject", "its", "revs" ],
            "cols": ["benchmark", "mem_peak", "best", "mean", "mode", "worst", "stdev", "rstdev", "diff" ],
            "sort": { "mode": "asc" }
        },
        "container-benchmark": {
            "generator": "composite",
            "reports": ["environment", "container", "memory", "detail"]
        }
    }
}

{
    "name"       : "viserio/bridge/doctrine",
    "type"       : "library",
    "description": "The Viserio Doctrine bridge.",
    "keywords"   : ["narrowspark", "viserio", "database", "doctrine", "migrations", "bridge"],
    "license"    : "MIT",
    "homepage"   : "http://github.com/narrowspark/framework",
    "support"    : {
        "issues": "https://github.com/narrowspark/framework/issues",
        "source": "https://github.com/narrowspark/framework"
    },
    "authors"    : [
        {
          "name"    : "Daniel Bannert",
          "email"   : "d.bannert@anolilab.de",
          "homepage": "http://www.anolilab.de",
          "role"    : "Developer"
        }
    ],
    "require": {
        "php"                                    : "^7.1",
        "ext-pdo"                                : "*",
        "doctrine/dbal"                          : "^2.5",
        "doctrine/migrations"                    : "^1.4",
        "narrowspark/collection"                 : "^0.1",
        "ocramius/proxy-manager"                 : "^2.0"
    },
    "require-dev": {
        "container-interop/service-provider"     : "^0.3",
        "phpunit/phpunit"                        : "~5.7",
        "viserio/container"                      : "self.version"
    },
    "autoload": {
        "psr-4": {
            "Viserio\\Bridge\\Doctrine\\"        : ""
        },
        "exclude-from-classmap"                  : ["/Tests/"]
    },
    "autoload-dev": {
        "psr-4": {
            "Viserio\\Bridge\\Doctrine\\Tests\\" : "Tests/"
        }
    },
    "suggest": {
        "container-interop/service-provider"     : "Required to use service-provider (^0.3).",
        "ext-pdo_dblib"                          : "Required to use MSSQL databases on Liunx/UNIX platform",
        "ext-pdo-mysql"                          : "Required to use MySQL or MariaDB databases",
        "ext-pdo-pqsql"                          : "Required to use PostgreSQL databases",
        "ext-pdo-sqlite"                         : "Required to use SQLite databases",
        "ext-pdo_sqlsrv"                         : "Required to use MSSQL databases on Windows platform",
        "viserio/statical-proxy"                 : "Required to use the proxy instances (self.version).",
    },
    "extra": {
        "branch-alias": {
            "dev-master"                         : "1.0-dev"
        }
    },
    "minimum-stability"                          : "dev",
    "prefer-stable"                              : true
}

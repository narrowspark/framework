{
    "name"       : "viserio/hashing",
    "type"       : "library",
    "description": "The Viserio Hashing package.",
    "keywords"   : ["narrowspark", "viserio", "hashing", "password"],
    "license"    : "MIT",
    "homepage"   : "http://github.com/Narrowspark/hashing",
    "support"    : {
        "issues": "https://github.com/narrowspark/framework/issues",
        "source": "https://github.com/narrowspark/framework"
    },
    "authors"    : [
        {
          "name"    : "Daniel Bannert",
          "email"   : "d.bannert@anolilab.de",
          "homepage": "http://www.anolilab.de",
          "role"    : "Developer"
        }
    ],
    "require": {
        "php"                             : "^5.6|^7.0",
        "viserio/support"                 : "self.version",
        "viserio/contracts"               : "self.version",
        "paragonie/password_lock"         : "~1.1.0"
    },
    "require-dev": {
        "narrowspark/php-cs-fixer-config" : "~1.1.5",
        "narrowspark/testing-helper"      : "~1.5",
        "phpunit/phpunit"                 : "~5.1.3"
    },
    "autoload": {
        "psr-4": {
            "Viserio\\Hashing\\"          : ""
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Viserio\\Hashing\\Tests\\"   : "Tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master"                  : "1.0-dev"
        }
    },
    "minimum-stability"                   : "dev",
    "prefer-stable"                       : true
}

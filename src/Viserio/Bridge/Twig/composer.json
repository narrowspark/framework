{
    "name"       : "viserio/bridge-twig",
    "type"       : "library",
    "description": "The Viserio Twig bridge.",
    "keywords"   : ["narrowspark", "viserio", "twig", "bridge"],
    "license"    : "MIT",
    "homepage"   : "http://github.com/narrowspark/framework",
    "support"    : {
        "issues": "https://github.com/narrowspark/framework/issues",
        "source": "https://github.com/narrowspark/framework"
    },
    "authors"    : [
        {
          "name"    : "Daniel Bannert",
          "email"   : "d.bannert@anolilab.de",
          "homepage": "http://www.anolilab.de",
          "role"    : "Developer"
        }
    ],
    "require": {
        "php"                                : "^7.1",
        "twig/twig"                          : "^2.0",
        "viserio/contracts"                  : "self.version",
        "viserio/view"                       : "self.version"
    },
    "require-dev": {
        "container-interop/service-provider" : "^0.3",
        "danielstjules/stringy"              : "^3.0",
        "narrowspark/testing-helper"         : "^3.0",
        "mockery/mockery"                    : "^1.0",
        "phpunit/phpunit"                    : "^6.0",
        "symfony/var-dumper"                 : "~3.3",
        "viserio/config"                     : "self.version",
        "viserio/container"                  : "self.version",
        "viserio/session"                    : "self.version",
        "viserio/support"                    : "self.version",
        "viserio/translation"                : "self.version",
        "viserio/profiler"                   : "self.version"
    },
    "autoload": {
        "psr-4": {
            "Viserio\\Bridge\\Twig\\"        : ""
        },
        "exclude-from-classmap"              : ["/Tests/"]
    },
    "autoload-dev": {
        "psr-4": {
            "Viserio\\Bridge\\Twig\\Tests\\" : "Tests/"
        }
    },
    "suggest": {
        "container-interop/service-provider" : "Required to use service-provider (^0.3).",
    },
    "extra": {
        "branch-alias": {
            "dev-master"                     : "1.0-dev"
        }
    },
    "minimum-stability"                      : "dev",
    "prefer-stable"                          : true
}

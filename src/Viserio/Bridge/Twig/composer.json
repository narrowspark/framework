{
    "name": "viserio/twig-bridge",
    "type": "viserio-bridge",
    "description": "The Viserio Twig bridge.",
    "keywords": [
        "narrowspark",
        "viserio",
        "twig",
        "bridge"
    ],
    "homepage": "http://github.com/narrowspark/framework",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Bannert",
            "email": "d.bannert@anolilab.de",
            "homepage": "http://www.anolilab.de",
            "role": "Developer"
        },
        {
            "name": "Narrowspark Community",
            "homepage": "https://narrowspark.com/contributors"
        }
    ],
    "require": {
        "php": "^7.3",
        "ext-json": "*",
        "twig/twig": "^2.11.0 || ^3.0.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.2.3",
        "narrowspark/coding-standard": "^3.1.0",
        "narrowspark/testing-helper": "^8.0.1",
        "phpunit/phpunit": "8.2.*",
        "slam/phpstan-extensions": "^3.6.1",
        "viserio/config": "^1.0@dev",
        "viserio/console": "^1.0@dev",
        "viserio/container": "^1.0@dev",
        "viserio/options-resolver": "^1.0@dev",
        "viserio/phpstan-bridge": "^1.0@dev",
        "viserio/profiler": "^1.0@dev",
        "viserio/session": "^1.0@dev",
        "viserio/support": "^1.0@dev",
        "viserio/translation": "^1.0@dev",
        "voku/stringy": "^5.1"
    },
    "suggest": {
        "viserio/config": "Required to use config extension (dev-master).",
        "viserio/console": "Required to use lint and debug command (dev-master).",
        "viserio/container": "Required to use service-provider (dev-master).",
        "viserio/options-resolver": "Required to use the service-provider (dev-master).",
        "viserio/profiler": "Required to use data collector (dev-master).",
        "viserio/session": "Required to use session extension (dev-master).",
        "viserio/support": "Required to use str extension (dev-master).",
        "viserio/translation": "Required to use translation extension (dev-master)."
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Viserio\\Bridge\\Twig\\": ""
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Viserio\\Bridge\\Twig\\Tests\\": "Tests/"
        }
    },
    "minimum-stability": "dev",
    "support": {
        "issues": "https://github.com/narrowspark/framework/issues",
        "source": "https://github.com/narrowspark/framework"
    }
}

{
    "name"       : "viserio/console",
    "type"       : "library",
    "description": "The Viserio Console package.",
    "keywords"   : ["framework", "narrowspark", "cli", "command", "viserio", "cerebro", "symfony"],
    "license"    : "MIT",
    "homepage"   : "http://github.com/narrowspark/framework",
    "support"    : {
        "issues": "https://github.com/narrowspark/framework/issues",
        "source": "https://github.com/narrowspark/framework"
    },
    "authors": [
        {
          "name"    : "Daniel Bannert",
          "email"   : "d.bannert@anolilab.de",
          "homepage": "http://www.anolilab.de",
          "role"    : "Developer"
        }
    ],
    "require": {
        "php"                                      : "^7.2",
        "ext-mbstring"                             : "*",
        "php-di/invoker"                           : "^2.0",
        "psr/container"                            : "^1.0",
        "symfony/console"                          : "~4.0",
        "viserio/contract"                         : "self.version",
        "viserio/support"                          : "self.version"
    },
    "require-dev": {
        "container-interop/service-provider"       : "^0.4",
        "mockery/mockery"                          : "^1.0",
        "narrowspark/testing-helper"               : "^6.0",
        "phpunit/phpunit"                          : "^7.0",
        "viserio/container"                        : "self.version",
        "viserio/events"                           : "self.version"
    },
    "autoload": {
        "psr-4": {
            "Viserio\\Component\\Console\\"        : ""
        },
        "exclude-from-classmap"                    : ["/Tests/"]
    },
    "autoload-dev": {
        "psr-4": {
            "Viserio\\Component\\Console\\Tests\\" : "Tests/"
        }
    },
    "provide": {
        "psr/container-implementation"             : "^1.0"
    },
    "suggest": {
        "container-interop/service-provider"       : "Required to use service-provider (^0.4).",
        "viserio/statical-proxy"                   : "Required to use the proxy instances (self.version)."
    },
    "extra": {
        "branch-alias": {
            "dev-master"                           : "1.0-dev"
        },
        "narrowspark": {
            "configure": {
                "providers": {
                    "global": {
                        "console"                  : "Viserio\\Component\\Console\\Provider\\ConsoleServiceProvider",
                        "lazily-console"           : "Viserio\\Component\\Console\\Provider\\LazilyCommandsServiceProvider"
                    }
                }
            }
        }
    },
    "minimum-stability"                            : "dev",
    "prefer-stable"                                : true
}

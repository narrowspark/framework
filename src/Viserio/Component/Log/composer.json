{
    "name": "viserio/log",
    "type": "library",
    "description": "The Viserio Log package.",
    "keywords": [
        "narrowspark",
        "viserio",
        "monolog",
        "psr",
        "log"
    ],
    "homepage": "http://github.com/narrowspark/framework",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Bannert",
            "email": "d.bannert@anolilab.de",
            "homepage": "http://www.anolilab.de",
            "role": "Developer"
        },
        {
            "name": "Narrowspark Community",
            "homepage": "https://narrowspark.com/contributors"
        }
    ],
    "require": {
        "php": "^7.3",
        "monolog/monolog": "^2.0.0",
        "viserio/events-contract": "self.version",
        "viserio/log-contract": "self.version",
        "viserio/manager": "self.version",
        "viserio/support-contract": "self.version"
    },
    "provide": {
        "psr/log-implementation": "^1.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.2.3",
        "narrowspark/coding-standard": "^3.1.0",
        "narrowspark/testing-helper": "^8.0.1",
        "phpunit/phpunit": "8.2.*",
        "slam/phpstan-extensions": "^3.6.1",
        "viserio/container": "self.version",
        "viserio/events": "self.version",
        "viserio/monolog-bridge": "self.version",
        "viserio/options-resolver": "self.version",
        "viserio/phpstan-bridge": "self.version",
        "viserio/profiler": "self.version"
    },
    "suggest": {
        "viserio/container": "Required to use service-provider (self.version).",
        "viserio/events": "Required for log messages in logger (^self.version).",
        "viserio/monolog-bridge": "Has some helpful handlers, formatters and processors for monolog (self.version).",
        "viserio/options-resolver": "Required to use service-provider (self.version)."
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Viserio\\Component\\Log\\": ""
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Viserio\\Component\\Log\\Tests\\": "Tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "support": {
        "issues": "https://github.com/narrowspark/framework/issues",
        "source": "https://github.com/narrowspark/framework"
    }
}

{
    "name"       : "viserio/log",
    "type"       : "library",
    "description": "The Viserio Log package.",
    "keywords"   : ["narrowspark", "viserio", "monolog", "psr", "log"],
    "license"    : "MIT",
    "homepage"   : "http://github.com/narrowspark/framework",
    "support"    : {
        "issues": "https://github.com/narrowspark/framework/issues",
        "source": "https://github.com/narrowspark/framework"
    },
    "authors"    : [
        {
          "name"    : "Daniel Bannert",
          "email"   : "d.bannert@anolilab.de",
          "homepage": "http://www.anolilab.de",
          "role"    : "Developer"
        }
    ],
    "require": {
        "php"                                  : "^7.2",
        "monolog/monolog"                      : "^1.23.0",
        "viserio/contract"                     : "self.version",
        "viserio/support"                      : "self.version"
    },
    "require-dev": {
        "container-interop/service-provider"   : "^0.4",
        "mockery/mockery"                      : "^1.0",
        "narrowspark/testing-helper"           : "^6.0",
        "phpunit/phpunit"                      : "^7.0",
        "viserio/container"                    : "self.version",
        "viserio/events"                       : "self.version",
        "viserio/options-resolver"             : "self.version",
        "viserio/profiler"                     : "self.version"
    },
    "autoload": {
        "psr-4": {
            "Viserio\\Component\\Log\\"        : ""
        },
        "exclude-from-classmap"                : ["/Tests/"]
    },
    "autoload-dev": {
        "psr-4": {
            "Viserio\\Component\\Log\\Tests\\" : "Tests/"
        }
    },
    "provide": {
        "psr/log-implementation"               : "^1.0"
    },
    "suggest": {
        "container-interop/service-provider"   : "Required to use service-provider (^0.4).",
        "viserio/events"                       : "Required for log messages in logger (^self.version).",
        "viserio/statical-proxy"               : "Required to use the proxy instances (self.version).",
        "viserio/options-resolver"             : "Required to use service-provider (self.version)."
    },
    "extra": {
        "branch-alias": {
            "dev-master"                       : "1.0-dev"
        },
        "narrowspark": {
            "configure": {
                "providers": {
                    "global" : {
                        "log"                  : "Viserio\\Component\\Log\\Provider\\LoggerServiceProvider"
                    },
                    "local": {
                        "log-data"             : "Viserio\\Component\\Log\\Provider\\LoggerDataCollectorServiceProvider"
                    }
                },
                "proxies": {
                    "global": {
                        "log"                  : "Viserio\\Component\\Log\\Proxy\\Log"
                    }
                }
            }
        }
    },
    "minimum-stability"                        : "dev",
    "prefer-stable"                            : true
}

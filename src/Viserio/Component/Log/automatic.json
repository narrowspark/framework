{
    "configurators": {
        "env": {
            "LOG_CHANNEL": "stack"
        },
        "providers": {
            "Viserio\\Component\\Log\\Container\\Provider\\LoggerServiceProvider": [
                "global"
            ],
            "Viserio\\Component\\Log\\Provider\\LoggerDataCollectorServiceProvider": [
                "local",
                "testing"
            ]
        },
        "options": {
            "global": {
                "viserio": {
                    "logging": {
                        "default": "%env:LOG_CHANNEL%",
                        "env": "%env:APP_ENV%",
                        "path": "%directory:storage%/logs",
                        "channels": {
                            "stack": {
                                "driver": "stack",
                                "channels": [
                                    "daily"
                                ]
                            }
                        }
                    }
                }
            },
            "testing": {
                "viserio": {
                    "logging": {
                        "default": "%env:LOG_CHANNEL%",
                        "env": "testing",
                        "channels": {
                            "stack": {
                                "driver": "stack",
                                "channels": [
                                    "daily"
                                ]
                            }
                        }
                    },
                    "profiler": {
                        "collector": {
                            "logs": true
                        }
                    }
                }
            }
        }
    }
}

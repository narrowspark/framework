{
    "configurators": {
        "env": {
            "LOG_CHANNEL": "stack"
        },
        "providers": {
            "Viserio\\Component\\Log\\Provider\\LoggerServiceProvider": [
                "global"
            ],
            "Viserio\\Component\\Log\\Provider\\LoggerDataCollectorServiceProvider": [
                "local",
                "testing"
            ]
        },
        "proxies": {
            "Viserio\\Component\\Log\\Proxy\\Log": [
                "global"
            ]
        },
        "options": {
            "viserio": {
                "logging": {
                    "default": "%env:LOG_CHANNEL%",
                    "env": "%env:APP_ENV%",
                    "path": "%directory:storage%/logging",
                    "channels": {
                        "stack": {
                            "driver": "stack",
                            "channels": ["daily"]
                        }
                    }
                }
            }
        }
    }
}

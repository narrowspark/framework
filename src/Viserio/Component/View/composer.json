{
    "name"       : "viserio/view",
    "type"       : "library",
    "description": "The Viserio View package.",
    "keywords"   : ["narrowspark", "viserio", "view", "php"],
    "license"    : "MIT",
    "homepage"   : "http://github.com/narrowspark/framework",
    "support"    : {
        "issues": "https://github.com/narrowspark/framework/issues",
        "source": "https://github.com/narrowspark/framework"
    },
    "authors"    : [
        {
          "name"    : "Daniel Bannert",
          "email"   : "d.bannert@anolilab.de",
          "homepage": "http://www.anolilab.de",
          "role"    : "Developer"
        }
    ],
    "require": {
        "php"                                 : "^7.1",
        "narrowspark/arr"                     : "^2.1",
        "psr/container"                       : "^1.0",
        "symfony/polyfill-mbstring"           : "^1.0",
        "viserio/contracts"                   : "self.version",
        "viserio/filesystem"                  : "self.version",
        "viserio/options-resolver"            : "self.version",
        "viserio/support"                     : "self.version"
    },
    "require-dev": {
        "container-interop/service-provider"  : "^0.3",
        "erusev/parsedown-extra"              : "^0.7",
        "mockery/mockery"                     : "^1.0",
        "narrowspark/testing-helper"          : "^3.0",
        "phpunit/phpunit"                     : "^6.0",
        "http-interop/http-middleware"        : "^0.4",
        "viserio/config"                      : "self.version",
        "viserio/http-factory"                : "self.version"
    },
    "autoload": {
        "psr-4": {
            "Viserio\\View\\"                 : ""
        },
        "exclude-from-classmap"               : ["/Tests/"]
    },
    "autoload-dev": {
        "psr-4": {
            "Viserio\\View\\Tests\\"          : "Tests/"
        }
    },
    "provide": {
        "psr/container-implementation"        : "^1.0"
    },
    "suggest": {
        "container-interop/service-provider"  : "Required to use service-provider (^0.3).",
        "http-interop/http-middleware"        : "Required to use middleware (^0.4).",
        "viserio/http-factory"                : "Required to use the Proxy View::createResponseView (^0.3)."
    },
    "extra": {
        "branch-alias": {
            "dev-master"                      : "1.0-dev"
        }
    },
    "minimum-stability"                       : "dev",
    "prefer-stable"                           : true
}

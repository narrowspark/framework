{
    "configurators": {
        "providers": {
            "Viserio\\Component\\Exception\\Provider\\ConsoleExceptionServiceProvider": [
                "global"
            ],
            "Viserio\\Component\\Exception\\Provider\\HttpExceptionServiceProvider": [
                "global"
            ]
        },
        "options": {
            "viserio": {
                "exception": {
                    "debug": "%env('APP_DEBUG')%",
                    "env": "%env('APP_ENV')%"
                }
            }
        },
        "bootstrap": {
            "Viserio\\Component\\Exception\\Bootstrap\\ConsoleHandleExceptions": ["console"],
            "Viserio\\Component\\Exception\\Bootstrap\\HttpHandleExceptions": ["http"]
        }
    }
}

{
    "name"       : "viserio/hashing",
    "type"       : "library",
    "description": "The Viserio Hashing package.",
    "keywords"   : ["narrowspark", "viserio", "hashing", "password", "hash", "encryption"],
    "license"    : "MIT",
    "homepage"   : "http://github.com/narrowspark/framework",
    "support"    : {
        "issues": "https://github.com/narrowspark/framework/issues",
        "source": "https://github.com/narrowspark/framework"
    },
    "authors"    : [
        {
          "name"    : "Daniel Bannert",
          "email"   : "d.bannert@anolilab.de",
          "homepage": "http://www.anolilab.de",
          "role"    : "Developer"
        }
    ],
    "require": {
        "php"                                      : "^7.2",
        "paragonie/password_lock"                  : "^3.0",
        "viserio/contracts"                        : "self.version"
    },
    "require-dev": {
        "container-interop/service-provider"       : "^0.3",
        "narrowspark/testing-helper"               : "^3.0",
        "phpunit/phpunit"                          : "^6.0",
        "symfony/polyfill-mbstring"                : "^1.0",
        "viserio/container"                        : "self.version",
        "viserio/options-resolver"                 : "self.version"
    },
    "autoload": {
        "psr-4": {
            "Viserio\\Component\\Hashing\\"        : ""
        },
        "exclude-from-classmap"                    : ["/Tests/"]
    },
    "autoload-dev": {
        "psr-4": {
            "Viserio\\Component\\Hashing\\Tests\\" : "Tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master"                           : "1.0-dev"
        }
    },
    "suggest": {
        "container-interop/service-provider"       : "Required to use service-provider (^0.3).",
        "viserio/statical-proxy"                   : "Required to use the proxy instances (self.version).",
        "viserio/options-resolver"                 : "Required to use service-provider (self.version)."
    },
    "minimum-stability"                            : "dev",
    "prefer-stable"                                : true
}

{
    "name"       : "viserio/config",
    "type"       : "library",
    "description": "The Viserio Config package.",
    "keywords"   : ["narrowspark", "viserio", "config", "configuration"],
    "license"    : "MIT",
    "homepage"   : "http://github.com/narrowspark/framework",
    "support"    : {
        "issues": "https://github.com/narrowspark/framework/issues",
        "source": "https://github.com/narrowspark/framework"
    },
    "authors"    : [
        {
          "name"    : "Daniel Bannert",
          "email"   : "d.bannert@anolilab.de",
          "homepage": "http://www.anolilab.de",
          "role"    : "Developer"
        }
    ],
    "require": {
        "php"                                     : "^7.1",
        "narrowspark/arr"                         : "^2.1",
        "viserio/contracts"                       : "self.version"
    },
    "require-dev": {
        "container-interop/service-provider"      : "^0.3",
        "phpunit/phpunit"                         : "^6.0",
        "mikey179/vfsStream"                      : "^1.6",
        "narrowspark/testing-helper"              : "^3.0",
        "viserio/container"                       : "self.version",
        "viserio/parsers"                         : "self.version"
    },
    "autoload": {
        "psr-4": {
            "Viserio\\Component\\Config\\"        : ""
        },
        "exclude-from-classmap"                   : ["/Tests/"]
    },
    "autoload-dev": {
        "psr-4": {
            "Viserio\\Component\\Config\\Tests\\" : "Tests/"
        }
    },
    "suggest": {
        "container-interop/service-provider"      : "Required to use service-provider (^0.3).",
        "viserio/parsers"                         : "Required to import yaml, ini, json, po, toml and xml config files (self.version).",
        "viserio/statical-proxy"                  : "Required to use the proxy instances (self.version)."
    },
    "extra": {
        "branch-alias": {
            "dev-master"                          : "1.0-dev"
        }
    },
    "minimum-stability"                           : "dev",
    "prefer-stable"                               : true
}

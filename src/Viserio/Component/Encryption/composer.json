{
    "name"       : "viserio/encryption",
    "type"       : "library",
    "description": "The Viserio Encrypter package.",
    "keywords"   : ["narrowspark", "viserio", "encrypter", "encryption", "password", "cryptography", "hashing", "libsodium", "sodium", "crypto"],
    "license"    : "MIT",
    "homepage"   : "http://github.com/narrowspark/framework",
    "support"    : {
        "issues": "https://github.com/narrowspark/framework/issues",
        "source": "https://github.com/narrowspark/framework"
    },
    "authors"    : [
        {
          "name"    : "Daniel Bannert",
          "email"   : "d.bannert@anolilab.de",
          "homepage": "http://www.anolilab.de",
          "role"    : "Developer"
        }
    ],
    "require": {
        "php"                                        : "^7.2",
        "ext-mbstring"                               : "*",
        "ext-sodium"                                 : "*",
        "paragonie/constant_time_encoding"           : "^2.0",
        "viserio/contract"                           : "self.version"
    },
    "require-dev": {
        "container-interop/service-provider"         : "^0.4",
        "phpunit/phpunit"                            : "^6.0",
        "narrowspark/testing-helper"                 : "^6.0",
        "nyholm/nsa"                                 : "^1.1",
        "viserio/config"                             : "self.version",
        "viserio/container"                          : "self.version",
        "viserio/options-resolver"                   : "self.version",
        "viserio/support"                            : "self.version"
    },
    "autoload": {
        "files": [
            "helpers.php"
        ],
        "psr-4": {
            "Viserio\\Component\\Encrypter\\"        : ""
        },
        "exclude-from-classmap"                      : ["/Tests/"]
    },
    "autoload-dev": {
        "psr-4": {
            "Viserio\\Component\\Encrypter\\Tests\\" : "Tests/"
        }
    },
    "suggest": {
        "container-interop/service-provider"         : "Required to use service-provider (^0.4).",
        "viserio/config"                             : "Optional to use service-provider (self.version).",
        "viserio/statical-proxy"                     : "Required to use the proxy instances (self.version).",
        "viserio/options-resolver"                   : "Required to use service-provider (self.version)."
    },
    "extra": {
        "branch-alias": {
            "dev-master"                             : "1.0-dev"
        }
    },
    "minimum-stability"                              : "dev",
    "prefer-stable"                                  : true
}

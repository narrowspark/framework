{
    "name": "viserio/mail",
    "type": "library",
    "description": "The Viserio Mail package.",
    "keywords": [
        "narrowspark",
        "viserio",
        "mail",
        "viserio",
        "swiftmailer",
        "gpg",
        "gnupg"
    ],
    "homepage": "https://github.com/narrowspark/framework",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Bannert",
            "email": "d.bannert@anolilab.de",
            "homepage": "http://www.anolilab.de",
            "role": "Developer"
        },
        {
            "name": "Narrowspark Community",
            "homepage": "https://narrowspark.com/contributors"
        }
    ],
    "require": {
        "php": "^7.4",
        "egulias/email-validator": "^2.1.13",
        "php-di/invoker": "^2.0.0",
        "swiftmailer/swiftmailer": "^6.2.3",
        "viserio/events-contract": "^1.0@dev",
        "viserio/mail-contract": "^1.0@dev",
        "viserio/manager": "^1.0@dev",
        "viserio/options-resolver": "^1.0@dev",
        "viserio/support": "^1.0@dev",
        "viserio/view-contract": "^1.0@dev"
    },
    "require-dev": {
        "aws/aws-sdk-php": "^3.0",
        "guzzlehttp/guzzle": "^6.0",
        "mockery/mockery": "^1.2.4",
        "narrowspark/coding-standard": "^3.3.0",
        "narrowspark/testing-helper": "^8.0.2",
        "nyholm/nsa": "^1.1.0",
        "opis/closure": "^3.0",
        "phpunit/phpunit": "8.2.*",
        "psr/log": "^1.1.0",
        "slam/phpstan-extensions": "^4.0.0",
        "viserio/container": "^1.0@dev",
        "viserio/events": "^1.0@dev",
        "viserio/filesystem": "^1.0@dev",
        "viserio/phpstan-bridge": "^1.0@dev",
        "viserio/view": "^1.0@dev",
        "voku/stringy": "^5.2.0"
    },
    "suggest": {
        "aws/aws-sdk-php": "Required to use the SES mail driver (^3.0).",
        "guzzlehttp/guzzle": "Required to use the Mailgun, Mandrill, SparkPost and Postmark mail drivers (^6.0).",
        "opis/closure": "Required to be able to serialize closures (^3.0).",
        "psr/container": "Required to use the invoker in mailer (^1.0).",
        "psr/log": "Required to use the LogTransporter (^1.0.2).",
        "viserio/container": "Required to use service-provider (^1.0@dev)."
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Viserio\\Component\\Mail\\": ""
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Viserio\\Component\\Mail\\Tests\\": "Tests/"
        }
    },
    "minimum-stability": "dev",
    "support": {
        "issues": "https://github.com/narrowspark/framework/issues",
        "source": "https://github.com/narrowspark/framework"
    }
}

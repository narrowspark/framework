{
    "configurators": {
        "env": {
            "MAIL_DRIVER" : "array",
            "MAIL_FROM_ADDRESS": "hello@example.com",
            "MAIL_FROM_NAME": "Example"
        },
        "providers": {
            "Viserio\\Component\\Mail\\Provider\\MailServiceProvider": [
                "global"
            ]
        },
        "proxies": {
            "Viserio\\Component\\Mail\\Proxy\\Mail": [
                "global"
            ]
        },
        "options": {
            "global": {
                "viserio": {
                    "mail": {
                        "default": "%env:MAIL_DRIVER%",
                        "from": {
                            "address": "%env:MAIL_FROM_ADDRESS%",
                            "name": "%env:MAIL_FROM_NAME%"
                        },
                        "connections": []
                    }
                }
            }
        }
    }
}

{
    "configurators": {
        "env": {
            "APP_ENV": "local",
            "APP_DEBUG": true,
            "APP_URL": "http://localhost"
        },
        "providers": {
            "Viserio\\Component\\Foundation\\Provider\\ConsoleCommandsServiceProvider": [
                "global"
            ],
            "Viserio\\Component\\Foundation\\Provider\\FoundationDataCollectorServiceProvider": [
                "local",
                "testing"
            ]
        },
        "proxies": {
            "Viserio\\Component\\Foundation\\Proxy\\App": [
                "global"
            ]
        },
        "gitignore": [
            "/.env",
            "/vendor/"
        ],
        "options": {
            "global": {
                "viserio": {
                    "app": {
                        "env": "%env:APP_ENV%",
                        "debug": "%env:APP_DEBUG%",
                        "url": "%env:APP_URL%"
                    },
                    "config": {
                        "processor": {
                            "directory": {
                                "mapper": {
                                    "app": [
                                        "Viserio\\Component\\Contract\\Foundation\\Kernel",
                                        "getAppPath"
                                    ],
                                    "config": [
                                        "Viserio\\Component\\Contract\\Foundation\\Kernel",
                                        "getConfigPath"
                                    ],
                                    "database": [
                                        "Viserio\\Component\\Contract\\Foundation\\Kernel",
                                        "getDatabasePath"
                                    ],
                                    "public": [
                                        "Viserio\\Component\\Contract\\Foundation\\Kernel",
                                        "getPublicPath"
                                    ],
                                    "resources": [
                                        "Viserio\\Component\\Contract\\Foundation\\Kernel",
                                        "getResourcePath"
                                    ],
                                    "routes": [
                                        "Viserio\\Component\\Contract\\Foundation\\Kernel",
                                        "getRoutesPath"
                                    ],
                                    "tests": [
                                        "Viserio\\Component\\Contract\\Foundation\\Kernel",
                                        "getTestsPath"
                                    ],
                                    "lang": [
                                        "Viserio\\Component\\Contract\\Foundation\\Kernel",
                                        "getLangPath"
                                    ],
                                    "storage": [
                                        "Viserio\\Component\\Contract\\Foundation\\Kernel",
                                        "getStoragePath"
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        },
        "bootstrap": {
            "Viserio\\Component\\Foundation\\Bootstrap\\ExtendLoadConfiguration": ["global"],
            "Viserio\\Component\\Foundation\\Bootstrap\\ConfigureKernel": ["global"],
            "Viserio\\Component\\Foundation\\Bootstrap\\LoadEnvironmentVariables": ["global"],
            "Viserio\\Component\\Foundation\\Bootstrap\\LoadServiceProvider": ["global"],
            "Viserio\\Component\\Foundation\\Bootstrap\\SetRequestForConsole": ["console"]
        }
    },
    "post-install-output": [
        "  * <fg=blue>Run</> your console application:",
        "    1. Change to the project directory",
        "    2. Execute the <comment>php cerebro</> to see all registered commands",
        "",
        "  * <fg=blue>Read</> the documentation at <comment>https://narrowspark.com/docs</>"
    ]
}

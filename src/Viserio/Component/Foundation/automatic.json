{
    "configurators": {
        "env": {
            "APP_ENV": "local",
            "APP_DEBUG": true,
            "APP_URL": "http://localhost"
        },
        "providers": {
            "Viserio\\Component\\Foundation\\Provider\\ConsoleCommandsServiceProvider": [
                "global"
            ],
            "Viserio\\Component\\Foundation\\Provider\\FoundationDataCollectorServiceProvider": [
                "local",
                "testing"
            ]
        },
        "proxies": {
            "Viserio\\Component\\Foundation\\Proxy\\App": [
                "global"
            ]
        },
        "gitignore": [
            "/.env",
            "/vendor/"
        ],
        "options": {
            "viserio": {
                "app": {
                    "env": "%env:APP_ENV%",
                    "debug": "%env:APP_DEBUG%",
                    "url": "%env:APP_URL%"
                },
                "config": {
                    "processor": {
                        "directory": {
                            "mapper": {
                                "app": ["\\Viserio\\Component\\Foundation\\AbstractKernel", "getAppPath"],
                                "config": ["\\Viserio\\Component\\Foundation\\AbstractKernel", "getConfigPath"],
                                "database": ["\\Viserio\\Component\\Foundation\\AbstractKernel", "getDatabasePath"],
                                "public": ["\\Viserio\\Component\\Foundation\\AbstractKernel", "getPublicPath"],
                                "resources": ["\\Viserio\\Component\\Foundation\\AbstractKernel", "getResourcePath"],
                                "routes": ["\\Viserio\\Component\\Foundation\\AbstractKernel", "getRoutesPath"],
                                "tests": ["\\Viserio\\Component\\Foundation\\AbstractKernel", "getTestsPath"],
                                "lang": ["\\Viserio\\Component\\Foundation\\AbstractKernel", "getLangPath"],
                                "storage": ["\\Viserio\\Component\\Foundation\\AbstractKernel", "getStoragePath"]
                            }
                        }
                    }
                }
            }
        },
        "bootstrap": {
            "Viserio\\Component\\Foundation\\Bootstrap\\ExtendLoadConfiguration": ["global"],
            "Viserio\\Component\\Foundation\\Bootstrap\\ConfigureKernel": ["global"],
            "Viserio\\Component\\Foundation\\Bootstrap\\LoadEnvironmentVariables": ["global"],
            "Viserio\\Component\\Foundation\\Bootstrap\\LoadServiceProvider": ["global"],
            "Viserio\\Component\\Foundation\\Bootstrap\\SetRequestForConsole": ["console"]
        }
    },
    "post-install-output": [
        "",
        "  * <fg=blue>Run</> your console application:",
        "    1. Change to the project directory",
        "    2. Execute the <comment>php cerebro</> to see all registered commands",
        "",
        "  * <fg=blue>Read</> the documentation at <comment>https://narrowspark.com/docs</>"
    ]
}

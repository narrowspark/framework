{
    "name"       : "viserio/foundation",
    "type"       : "library",
    "description": "The Viserio Foundation package.",
    "keywords"   : [
        "narrowspark",
        "sparkle",
        "viserio",
        "foundation",
        "container",
        "config",
        "log",
        "exception",
        "events",
        "parsers",
        "routing"
    ],
    "license"    : "MIT",
    "homepage"   : "http://github.com/narrowspark/framework",
    "support"    : {
        "issues": "https://github.com/narrowspark/framework/issues",
        "source": "https://github.com/narrowspark/framework"
    },
    "authors"    : [
        {
          "name"    : "Daniel Bannert",
          "email"   : "d.bannert@anolilab.de",
          "homepage": "http://www.anolilab.de",
          "role"    : "Developer"
        }
    ],
    "require": {
        "php"                                         : "^7.1",
        "narrowspark/http-status"                     : "^3.0",
        "psr/container"                               : "^1.0",
        "psr/log"                                     : "^1.0",
        "symfony/finder"                              : "~3.3",
        "symfony/polyfill-mbstring"                   : "^1.0",
        "viserio/contracts"                           : "self.version",
        "viserio/container"                           : "self.version",
        "viserio/events"                              : "self.version",
        "viserio/options-resolver"                    : "self.version",
        "viserio/routing"                             : "self.version",
        "viserio/support"                             : "self.version"
    },
    "require-dev": {
        "cakephp/chronos"                             : "^1.0",
        "http-interop/http-factory"                   : "^0.3",
        "mockery/mockery"                             : "^0.9",
        "narrowspark/testing-helper"                  : "^2.0",
        "phpunit/phpunit"                             : "^6.0",
        "viserio/config"                              : "self.version",
        "viserio/console"                             : "self.version",
        "viserio/exception"                           : "self.version",
        "viserio/log"                                 : "self.version",
        "viserio/pipeline"                            : "self.version"
    },
    "autoload": {
        "psr-4": {
            "Viserio\\Component\\Foundation\\"        : ""
        },
        "exclude-from-classmap"                       : ["/Tests/"]
    },
    "autoload-dev": {
        "psr-4": {
            "Viserio\\Component\\Foundation\\Tests\\" : "Tests/"
        }
    },
    "provide": {
        "psr/container-implementation"                : "^1.0",
        "psr/http-message-implementation"             : "^1.0"
    },
    "extra": {
        "branch-alias": {
            "dev-master"                              : "1.0-dev"
        }
    },
    "suggest": {
        "cakephp/chronos"                             : "Required to use CheckForMaintenanceModeMiddleware and DownCommand (^1.0)",
        "http-interop/http-factory"                   : "Required to use SetRequestForConsole (^0.3).",
        "vlucas/phpdotenv"                            : "Required to use LoadEnvironmentVariables bootstrap class (^2.3).",
        "viserio/config"                              : "Required to use the LoadConfiguration bootstrap class (self.version).",
        "viserio/console"                             : "Required to use the Console Kernel (self.version).",
        "viserio/log"                                 : "Required to use ConfigureLoggingServiceProvider and HandleLogger bootstrap class (self.version).",
        "viserio/exception"                           : "Required to use and see exceptions (self.version).",
        "viserio/pipeline"                            : "Required to use psr-15 middlewares (self.version).",
        "viserio/statical-proxy"                      : "Required to use statical-proxy bootstrap class (self.version)."
    },
    "minimum-stability"                               : "dev",
    "prefer-stable"                                   : true
}

{
    "name": "viserio/foundation",
    "type": "library",
    "description": "The Viserio Foundation package.",
    "keywords": [
        "narrowspark",
        "sparkle",
        "viserio",
        "foundation",
        "container",
        "config",
        "log",
        "exception",
        "events",
        "parser",
        "routing"
    ],
    "homepage": "http://github.com/narrowspark/framework",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Bannert",
            "email": "d.bannert@anolilab.de",
            "homepage": "http://www.anolilab.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-spl": "*",
        "psr/container": "^1.0",
        "symfony/polyfill-ctype": "^1.8.0",
        "symfony/polyfill-mbstring": "^1.8.0",
        "viserio/console": "self.version",
        "viserio/container": "self.version",
        "viserio/contract": "self.version",
        "viserio/options-resolver": "self.version",
        "viserio/support": "self.version"
    },
    "provide": {
        "psr/container-implementation": "^1.0",
        "psr/http-message-implementation": "^1.0"
    },
    "require-dev": {
        "cakephp/chronos": "^1.0.4",
        "mockery/mockery": "^1.2.0",
        "narrowspark/http-status": "^4.1.0",
        "narrowspark/testing-helper": "^7.0.0",
        "paragonie/halite": "^4.4.2",
        "phpunit/phpunit": "^7.2.0",
        "psr/http-factory": "^1.0.0",
        "symfony/filesystem": "^4.1.0",
        "symfony/process": "^4.1.0",
        "viserio/config": "self.version",
        "viserio/cron": "self.version",
        "viserio/events": "self.version",
        "viserio/exception": "self.version",
        "viserio/pipeline": "self.version"
    },
    "suggest": {
        "cakephp/chronos": "Required to use CheckForMaintenanceModeMiddleware and DownCommand (^1.0.4)",
        "narrowspark/http-status": "Required to use the Down-, UpCommand and MaintenanceModeException (^4.1.0).",
        "psr/http-factory": "Required to use the SetRequestForConsole (^1.0.0).",
        "viserio/config": "Required to use the LoadConfiguration bootstrap class (self.version).",
        "viserio/pipeline": "Required to use psr-15 middleware (self.version).",
        "viserio/statical-proxy": "Required to use statical-proxy bootstrap class (self.version).",
        "viserio/exception": "Required for a better http and console exception output (self.version).",
        "vlucas/phpdotenv": "Required to use the LoadEnvironmentVariables bootstrap class (^2.3.0)."
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Viserio\\Component\\Foundation\\": ""
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Viserio\\Component\\Foundation\\Tests\\": "Tests/"
        },
        "files": [
            "Tests/OverwritePhpFunctions.php"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "support": {
        "issues": "https://github.com/narrowspark/framework/issues",
        "source": "https://github.com/narrowspark/framework"
    }
}

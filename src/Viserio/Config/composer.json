{
    "name"       : "viserio/config",
    "type"       : "library",
    "description": "The Viserio Config package.",
    "keywords"   : ["narrowspark", "viserio", "config", "configuration"],
    "license"    : "MIT",
    "homepage"   : "http://github.com/Narrowspark/config",
    "support"    : {
        "issues": "https://github.com/narrowspark/framework/issues",
        "source": "https://github.com/narrowspark/framework"
    },
    "authors"    : [
        {
          "name"    : "Daniel Bannert",
          "email"   : "d.bannert@anolilab.de",
          "homepage": "http://www.anolilab.de",
          "role"    : "Developer"
        }
    ],
    "require": {
        "php"                             : "^5.6 || ^7.0",
        "viserio/cotracts"                : "self.version",
        "viserio/parsers"                 : "self.version",
        "viserio/support"                 : "self.version"
    },
    "require-dev": {
        "phpunit/phpunit"                 : "~5.1.3",
        "mikey179/vfsStream"              : "^1.6",
        "narrowspark/php-cs-fixer-config" : "~1.1.5",
        "narrowspark/testing-helper"      : "~1.5",
        "viserio/filesystem"              : "self.version"
    },
    "autoload": {
        "psr-4": {
            "Viserio\\Config\\"           : ""
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Viserio\\Config\\Tests\\"    : "Tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master"                  : "1.0-dev"
        }
    },
    "suggest": {
        "yosymfony/toml"                  : "Narrowspark config has support for TOML config",
        "symfony/yaml"                    : "Narrowspark config has support for YML config",
        "viserio/filesystem"              : "Required to use bind or cascadePackage function (0.10)"
    },
    "minimum-stability"                   : "dev",
    "prefer-stable"                       : true
}

{
    "name"       : "viserio/mail",
    "type"       : "library",
    "description": "The Viserio Mail package.",
    "keywords"   : ["narrowspark", "viserio", "mail", "viserio", "swiftmailer", "gpg", "gnupg"],
    "license"    : "MIT",
    "homepage"   : "http://github.com/narrowspark/framework",
    "support"    : {
        "issues": "https://github.com/narrowspark/framework/issues",
        "source": "https://github.com/narrowspark/framework"
    },
    "authors": [
        {
          "name"    : "Daniel Bannert",
          "email"   : "d.bannert@anolilab.de",
          "homepage": "http://www.anolilab.de",
          "role"    : "Developer"
        }
    ],
    "require": {
        "php"                                 : "7.0.0 - 7.0.5 || ^7.0.7",
        "narrowspark/arr"                     : "^1.1",
        "swiftmailer/swiftmailer"             : "^5.4",
        "viserio/config"                      : "self.version",
        "viserio/contracts"                   : "self.version",
        "viserio/support"                     : "self.version",
        "viserio/view"                        : "self.version"
    },
    "require-dev": {
        "aws/aws-sdk-php"                     : "^3.0",
        "guzzlehttp/guzzle"                   : "^6.0",
        "narrowspark/php-cs-fixer-config"     : "^1.1",
        "narrowspark/testing-helper"          : "^1.5",
        "jeremeamia/superclosure"             : "^2.2",
        "phpunit/phpunit"                     : "^5.1",
        "viserio/events"                      : "self.version",
        "viserio/queue"                       : "self.version"
    },
    "autoload": {
        "psr-4": {
            "Viserio\\Mail\\"                 : ""
        },
        "exclude-from-classmap"               : ["/Tests/"]
    },
    "autoload-dev": {
        "psr-4": {
            "Viserio\\Mail\\Tests\\"          : "Tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master"                      : "1.0-dev"
        }
    },
    "suggest" : {
        "aws/aws-sdk-php"                     : "Required to use the SES mail driver (^3.0).",
        "guzzlehttp/guzzle"                   : "Required to use the Mailgun, Mandrill, SparkPost and Postmark mail drivers (^6.0).",
        "jeremeamia/superclosure"             : "Required to be able to serialize closures (^2.2).",
        "pear/crypt_gpg"                      : "Required to send GPG-encrypted emails (^1.4).",
        "viserio/queue"                       : "Required to send queue emails (self.version)."
    },
    "minimum-stability"                       : "dev",
    "prefer-stable"                           : true
}

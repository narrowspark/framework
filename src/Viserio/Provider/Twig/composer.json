{
    "name": "viserio/twig-provider",
    "type": "viserio-provider",
    "description": "The Viserio Twig provider.",
    "keywords": [
        "narrowspark",
        "viserio",
        "twig",
        "provider"
    ],
    "homepage": "http://github.com/narrowspark/framework",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Bannert",
            "email": "d.bannert@anolilab.de",
            "homepage": "http://www.anolilab.de",
            "role": "Developer"
        },
        {
            "name": "Narrowspark Community",
            "homepage": "https://narrowspark.com/contributors"
        }
    ],
    "require": {
        "php": "^7.3",
        "twig/twig": "^2.11.0 || ^3.0.0",
        "viserio/filesystem": "self.version",
        "viserio/options-resolver-contract": "self.version",
        "viserio/view": "self.version"
    },
    "require-dev": {
        "mockery/mockery": "^1.2.3",
        "narrowspark/coding-standard": "^3.1.0",
        "narrowspark/testing-helper": "^8.0.1",
        "phpunit/phpunit": "8.2.*",
        "slam/phpstan-extensions": "^3.6.1",
        "viserio/config-contract": "self.version",
        "viserio/console": "self.version",
        "viserio/container": "self.version",
        "viserio/phpstan-bridge": "self.version",
        "viserio/twig-bridge": "self.version",
        "voku/stringy": "^5.2.0"
    },
    "suggest": {
        "viserio/console": "Required to use the commands (self.version).",
        "viserio/container": "Required to use service-provider (self.version).",
        "viserio/twig-bridge": "Required to use the twig extensions, commands for lint and debug (self.version)."
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Viserio\\Provider\\Twig\\": ""
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Viserio\\Provider\\Twig\\Tests\\": "Tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "support": {
        "issues": "https://github.com/narrowspark/framework/issues",
        "source": "https://github.com/narrowspark/framework"
    }
}

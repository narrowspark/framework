{
    "configurators": {
        "providers": {
            "Viserio\\Provider\\Twig\\Provider\\TwigServiceProvider": [
                "global"
            ]
        },
        "options": {
            "global": {
                "viserio": {
                    "view": {
                        "engines": {
                            "twig": {
                                "options": {
                                    "debug": "%env:APP_DEBUG%",
                                    "cache": "%directory:storage%/view/twig"
                                }
                            }
                        },
                        "paths": [
                            "%directory:resources%/views"
                        ]
                    }
                }
            }
        }
    }
}

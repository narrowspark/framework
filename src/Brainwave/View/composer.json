{
    "name"       : "brainwave/view",
    "type"       : "library",
    "description": "Narrowspark Framework for Creative People.",
    "keywords"   : ["narrowspark", "brainwave", "view", "plates", "php"],
    "license"    : "MIT",
    "homepage"   : "http://github.com/n-brainwave/api",
    "support"    : {
        "issues": "https://github.com/narrowspark/framework/issues",
        "source": "https://github.com/narrowspark/framework"
    },
    "authors"    : [
        {
          "name"    : "Daniel Bannert",
          "email"   : "d.bannert@anolilab.de",
          "homepage": "http://www.anolilab.de",
          "role"    : "Developer"
        }
    ],
    "require": {
        "php"                                : ">=5.4.0",
        "brainwave/contracts"                : "self.version",
        "brainwave/events"                   : "self.version",
        "brainwave/filesystem"               : "self.version",
        "brainwave/container"                : "self.version",
        "container-interop/container-interop": "~1.0"
    },
    "require-dev": {
        "dwoo/dwoo"                          : "~2.0b1",
        "league/plates"                      : "~3.1",
        "mthaml/mthaml"                      : "~1.6.0",
        "twig/twig"                          : "~1.16.3",
        "pyrocms/lex"                        : "~2.2"
    },
    "autoload": {
        "psr-4": {
            "Brainwave\\View\\"              : ""
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Brainwave\\View\\Tests\\"       : "tests/"
        }
    },
    "suggest": {
        "league/plates"                      : "Narrowspark has support for Plates v3.1.0",
        "dwoo/dwoo"                          : "Narrowspark has support for dwoo v2.0b1",
        "mthaml/mthaml"                      : "Narrowspark has support for mthaml v1.6.0",
        "twig/twig"                          : "Narrowspark has support for twig v1.16.3",
        "pyrocms/lex"                        : "Narrowspark has support for lex v2.2.0"
    },
    "extra": {
        "branch-alias": {
            "dev-master"                     : "0.9.8-dev"
        }
    },
    "minimum-stability"                      : "dev",
    "prefer-stable"                          : true
}
